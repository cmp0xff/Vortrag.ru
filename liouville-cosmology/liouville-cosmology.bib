@Article{Mostafazadeh2006,
  author      = {Ali Mostafazadeh and Farhad Zamani},
  title       = {Quantum mechanics of Klein--Gordon fields I: Hilbert Space, localized states, and chiral symmetry},
  journal     = {Ann. Phys.},
  year        = {2006},
  date        = {2006-02-17},
