@Article{Bamba2012,
  author      = {Kazuharu Bamba and Salvatore Capozziello and Shin'ichi Nojiri and Sergei D. Odintsov},
  title       = {Dark energy cosmology: the equivalent description via different theoretical models and cosmography tests},
  journal     = {Astrophys. Space Sci.},
